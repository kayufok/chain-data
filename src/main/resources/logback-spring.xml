<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Simple console appender only for Docker environment -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Reduce verbosity of specific loggers -->
    <logger name="com.baomidou.mybatisplus" level="WARN"/>
    <logger name="org.apache.ibatis" level="WARN"/>
    <logger name="org.springframework.jdbc" level="WARN"/>
    <logger name="org.springframework.transaction" level="WARN"/>
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.type" level="WARN"/>
    <logger name="okhttp3" level="WARN"/>
    <logger name="net.xrftech.chain.data.mapper" level="WARN"/>
    
    <!-- Application loggers -->
    <logger name="net.xrftech.chain.data" level="${LOG_LEVEL:-INFO}"/>
    
    <!-- Root logger configuration - Console only -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>